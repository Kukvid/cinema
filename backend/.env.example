# =============================================================================
# CINEMA MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Скопируйте этот файл в .env и измените значения под ваше окружение
# cp .env.example .env

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Cinema Management System
APP_VERSION=1.0.0
DEBUG=True

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# Формат: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:your_password_here@localhost:5432/cinema_db
DB_ECHO=False

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# ВАЖНО: Сгенерируйте сложный ключ для production!
# Для генерации используйте: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# BONUS SYSTEM SETTINGS
# =============================================================================
BONUS_ACCRUAL_PERCENTAGE=10
BONUS_POINTS_PER_RUBLE=1

# =============================================================================
# RESERVATION SETTINGS
# =============================================================================
SEAT_RESERVATION_TIMEOUT_MINUTES=5

# =============================================================================
# QR CODE SETTINGS
# =============================================================================
QR_CODE_SIZE=10
QR_CODE_BORDER=4

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE_MB=10

# =============================================================================
# REPORTS SETTINGS
# =============================================================================
REPORTS_DIR=reports
